    <script src="https://aframe.io/releases/1.2.0/aframe.min.js"></script>
    <script src="https://checkout.stripe.com/checkout.js"></script>
    <script>
        document.getElementById('startAR').addEventListener('click', function() {
            document.getElementById('ar-viewer').style.display = 'block';
        });

        const arButtons = document.querySelectorAll('.ar-view');
        arButtons.forEach(button => {
            button.addEventListener('click', function() {
                const modelUrl = this.getAttribute('data-model');
                const productImage = this.closest('.product').querySelector('img');
                productImage.classList.add('animate');
                setTimeout(() => {
                    productImage.classList.remove('animate');
                    startARExperience(modelUrl);
                }, 600); // Match with animation duration
            });
        });

        function startARExperience(modelUrl) {
            console.log('Loading AR model from: ' + modelUrl);
            const aBox = document.querySelector('#ar-model');
            aBox.setAttribute('material', `src: ${modelUrl}`);
        }

        const checkoutButtons = document.querySelectorAll('.checkout');
        checkoutButtons.forEach(button => {
            button.addEventListener('click', function() {
                const product = this.getAttribute('data-product');
                const price = this.getAttribute('data-price');
                initiateCheckout(product, price);
            });
        });

        function initiateCheckout(product, price) {
            var handler = StripeCheckout.configure({
                key: 'your-publishable-key-here', // Replace with your own Stripe public key
                locale: 'auto',
                token: function(token) {
                    console.log(token);
                    alert('Payment successful for ' + product);
                    // Here you can add code to handle the token on your server
                }
            });

            handler.open({
                name: 'Advanced E-Commerce',
                description: product,
                amount: price * 100, // Price in cents
                currency: 'USD'
            });
        }
    </script>
